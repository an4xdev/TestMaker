@rendermode InteractiveWebAssembly
<MudToggleIconButton Toggled="@_isDarkMode" ToggledChanged="OnToggledChanged"
                     Icon="@Icons.Material.Filled.AlarmOff" Color="@Color.Error" title=@(_isDarkMode ? "On" : "Off")
                     ToggledIcon="@Icons.Material.Filled.AlarmOn" ToggledColor="@Color.Success" @rendermode="InteractiveAuto"/>
                     
@code 
{
    [Parameter] public bool _isDarkMode { get; set; }

    public void OnToggledChanged(bool toggled)
    {
        _isDarkMode = toggled;
        Console.WriteLine($"Theme changed: IS DARK: {_isDarkMode}");
        StateHasChanged();
        StateHasChanged();
    }
}